<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">
            <i class="fas fa-link"></i>
            Connect Your TastyTrade Account
          </h4>
        </div>
        
        <div class="card-body">
          <!-- Security Notice -->
          <div class="alert alert-info">
            <i class="fas fa-shield-alt"></i>
            <strong>Security:</strong> Your credentials are encrypted and stored securely. We use bank-level encryption to protect your data.
          </div>

          <%= form_with url: tastytrade_connect_path, local: true, class: "needs-validation", novalidate: true do |form| %>
            
            <div class="mb-3">
              <%= form.label :tastytrade_username, "TastyTrade Username/Email", class: "form-label fw-bold" %>
              <%= form.email_field :tastytrade_username, 
                  class: "form-control", 
                  placeholder: "your-email@example.com",
                  required: true,
                  autocomplete: "username" %>
              <div class="invalid-feedback">
                Please enter your TastyTrade username/email.
              </div>
              <small class="form-text text-muted">
                This is the same email you use to log into TastyTrade
              </small>
            </div>

            <div class="mb-3">
              <%= form.label :tastytrade_password, "TastyTrade Password", class: "form-label fw-bold" %>
              <%= form.password_field :tastytrade_password, 
                  class: "form-control", 
                  placeholder: "Enter your TastyTrade password",
                  required: true,
                  autocomplete: "current-password" %>
              <div class="invalid-feedback">
                Please enter your TastyTrade password.
              </div>
            </div>

            <!-- Environment Selection -->
            <div class="mb-3">
              <label class="form-label fw-bold">Trading Environment</label>
              <div class="form-check">
                <%= form.radio_button :environment, "sandbox", 
                    checked: Rails.env.development?, 
                    class: "form-check-input",
                    id: "environment_sandbox" %>
                <%= form.label :environment_sandbox, class: "form-check-label" do %>
                  <strong>Sandbox (Paper Trading)</strong>
                  <small class="d-block text-muted">Safe testing with fake money - recommended for first-time setup</small>
                <% end %>
              </div>
              <div class="form-check">
                <%= form.radio_button :environment, "production", 
                    class: "form-check-input",
                    id: "environment_production" %>
                <%= form.label :environment_production, class: "form-check-label" do %>
                  <strong>Live Trading</strong>
                  <small class="d-block text-muted">Real money trading - only use when you're confident in the system</small>
                <% end %>
              </div>
            </div>

            <!-- Important Disclaimers -->
            <div class="alert alert-warning">
              <h6 class="fw-bold">⚠️ Important Notes:</h6>
              <ul class="mb-0 small">
                <li>You need an existing TastyTrade account</li>
                <li>Use Sandbox mode for testing before live trading</li>
                <li>Your credentials are encrypted and never shared</li>
                <li>You can disconnect anytime from your dashboard</li>
              </ul>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Connect to TastyTrade", 
                  class: "btn btn-primary btn-lg",
                  data: { disable_with: "Connecting..." } %>
            </div>

          <% end %>

          <div class="text-center mt-3">
            <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-outline-secondary" %>
          </div>

          <!-- Help Section -->
          <div class="mt-4 pt-3 border-top">
            <h6 class="fw-bold">Need Help?</h6>
            <ul class="small text-muted">
              <li>Don't have a TastyTrade account? <a href="https://tastytrade.com" target="_blank">Sign up here</a></li>
              <li>For Sandbox testing, create a separate account at <a href="https://developer.tastytrade.com" target="_blank">developer.tastytrade.com</a></li>
              <li>Connection issues? Check our <%= link_to "setup guide", "#", class: "text-decoration-none" %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap form validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>