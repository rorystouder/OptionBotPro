<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Market Scanner</h1>
        <%= button_to "Run New Scan", scanner_scan_path, method: :post, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <% if @latest_scan %>
    <!-- Latest Scan Results -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">
              Latest Scan Results
              <small class="text-muted">
                - <%= @latest_scan.scan_timestamp.strftime("%m/%d/%Y at %I:%M %p") %>
                (<%= @latest_scan.trades_found %> trades found)
              </small>
            </h5>
          </div>
          <div class="card-body">
            <% if @scan_data.any? %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Symbol</th>
                      <th>Strategy</th>
                      <th>Legs</th>
                      <th>Credit</th>
                      <th>Max Loss</th>
                      <th>POP</th>
                      <th>Risk/Reward</th>
                      <th>Model Score</th>
                      <th>Thesis</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @scan_data.each do |trade| %>
                      <tr>
                        <td><strong><%= trade['symbol'] %></strong></td>
                        <td><%= trade['strategy'] %></td>
                        <td><code><%= trade['legs'] %></code></td>
                        <td class="text-success">$<%= number_with_precision(trade['credit'], precision: 2) %></td>
                        <td class="text-danger">$<%= number_with_precision(trade['max_loss'], precision: 2) %></td>
                        <td><%= number_to_percentage(trade['pop'] * 100, precision: 1) %></td>
                        <td><%= number_with_precision(trade['risk_reward'], precision: 2) %></td>
                        <td><%= number_with_precision(trade['model_score'], precision: 2) %></td>
                        <td class="text-muted"><%= truncate(trade['thesis'], length: 60) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="alert alert-info text-center">
                <h5>No trades found</h5>
                <p class="mb-0">The latest scan didn't find any trades meeting the criteria.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Scan History -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Recent Scans</h5>
        </div>
        <div class="card-body">
          <% if @recent_scans.any? %>
            <div class="table-responsive">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Date & Time</th>
                    <th>Trades Found</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_scans.each do |scan| %>
                    <tr>
                      <td><%= scan.scan_timestamp.strftime("%m/%d/%Y %I:%M %p") %></td>
                      <td>
                        <span class="badge bg-<%= scan.trades_found > 0 ? 'success' : 'secondary' %>">
                          <%= scan.trades_found %> trades
                        </span>
                      </td>
                      <td>
                        <%= link_to "View Details", scanner_path(scan), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info text-center">
              <h6>No scans yet</h6>
              <p class="mb-0">Click "Run New Scan" to start analyzing market opportunities.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Scanner Information -->
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Scanner Criteria</h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li><strong>Minimum POP:</strong> 65%</li>
            <li><strong>Min Risk/Reward:</strong> 0.33 (1:3)</li>
            <li><strong>Max Loss Per Trade:</strong> 0.5% of NAV</li>
            <li><strong>Max Trades:</strong> 5 per scan</li>
            <li><strong>Max Per Sector:</strong> 2 trades</li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Strategies Analyzed</h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li>• Put Credit Spreads</li>
            <li>• Call Credit Spreads</li>
            <li>• Iron Condors</li>
            <li>More strategies coming soon...</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>