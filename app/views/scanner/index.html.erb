<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Market Scanner</h1>
        <%= button_to "Run New Scan", scanner_scan_path, method: :post, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <% if @latest_scan %>
    <!-- Scan Metadata -->
    <% if @scan_metadata.present? %>
    <div class="row mb-3">
      <div class="col-12">
        <div class="alert alert-info">
          <div class="row">
            <div class="col-md-3">
              <strong>Scan Mode:</strong> 
              <span class="badge bg-<%= @scan_metadata['scan_mode'] == 'live' ? 'success' : 'warning' %>">
                <%= (@scan_metadata['scan_mode'] || 'unknown').upcase %>
              </span>
            </div>
            <div class="col-md-3">
              <strong>Symbols Scanned:</strong> <%= @scan_metadata['symbols_scanned'] || 0 %>
            </div>
            <div class="col-md-3">
              <strong>Opportunities Found:</strong> <%= @scan_metadata['total_opportunities_found'] || 0 %>
            </div>
            <div class="col-md-3">
              <strong>Scan Duration:</strong> <%= @scan_metadata['scan_duration_ms'] || 0 %>ms
            </div>
          </div>
          <% if @scan_metadata['symbols_requested'].present? %>
          <div class="row mt-2">
            <div class="col-12">
              <small><strong>Symbols Analyzed:</strong> <%= @scan_metadata['symbols_requested'].join(', ') %></small>
            </div>
          </div>
          <% end %>
          <% if @scan_metadata['scan_criteria'].present? %>
          <div class="row mt-2">
            <div class="col-12">
              <small>
                <strong>Scan Criteria:</strong> 
                Min POP: <%= (@scan_metadata.dig('scan_criteria', 'min_pop') || 0) * 100 %>% |
                Min Risk/Reward: <%= @scan_metadata.dig('scan_criteria', 'min_risk_reward') || 0 %> |
                Max Loss: <%= @scan_metadata.dig('scan_criteria', 'max_loss_percentage') || 0 %>% NAV |
                Max Trades: <%= @scan_metadata.dig('scan_criteria', 'max_trades_per_cycle') || 0 %>
              </small>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    
    <!-- Latest Scan Results -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">
              Latest Scan Results
              <small class="text-muted">
                - <%= @latest_scan.scan_timestamp.strftime("%m/%d/%Y at %I:%M %p") %>
                (<%= @latest_scan.trades_found %> trades found<%= @scan_metadata['opportunities_after_filters'] ? " from #{@scan_metadata['opportunities_after_filters']} filtered" : "" %>)
              </small>
            </h5>
          </div>
          <div class="card-body">
            <% if @scan_data.any? %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Symbol</th>
                      <th>Price</th>
                      <th>Strategy</th>
                      <th>Strikes</th>
                      <th>DTE</th>
                      <th>Credit</th>
                      <th>Max Loss</th>
                      <th>POP</th>
                      <th>R/R</th>
                      <th>IV Rank</th>
                      <th>Greeks</th>
                      <th>Score</th>
                      <th>Thesis</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @scan_data.each do |trade| %>
                      <tr>
                        <td><strong><%= trade['symbol'] %></strong></td>
                        <td>$<%= number_with_precision(trade['current_price'] || 0, precision: 2) %></td>
                        <td>
                          <span class="badge bg-<%= trade['strategy'].include?('Put') ? 'success' : trade['strategy'].include?('Call') ? 'danger' : 'primary' %>">
                            <%= trade['strategy'] %>
                          </span>
                        </td>
                        <td><code><%= trade['legs'] %></code></td>
                        <td><%= trade['days_to_expiration'] || 'N/A' %></td>
                        <td class="text-success">$<%= number_with_precision(trade['credit'], precision: 2) %></td>
                        <td class="text-danger">$<%= number_with_precision(trade['max_loss'], precision: 2) %></td>
                        <td>
                          <span class="badge bg-<%= trade['pop'] >= 0.7 ? 'success' : 'warning' %>">
                            <%= number_to_percentage(trade['pop'] * 100, precision: 0) %>
                          </span>
                        </td>
                        <td><%= number_with_precision(trade['risk_reward'], precision: 2) %></td>
                        <td>
                          <% if trade['iv_rank'] %>
                            <span class="badge bg-<%= trade['iv_rank'] >= 50 ? 'success' : 'secondary' %>">
                              <%= trade['iv_rank'] %>%
                            </span>
                          <% else %>
                            -
                          <% end %>
                        </td>
                        <td class="small">
                          <% if trade['delta'] %>
                            Δ: <%= number_with_precision(trade['delta'], precision: 2) %><br>
                            Θ: <%= number_with_precision(trade['theta'], precision: 2) %>
                          <% else %>
                            -
                          <% end %>
                        </td>
                        <td>
                          <span class="badge bg-<%= trade['model_score'] >= 0.8 ? 'success' : trade['model_score'] >= 0.6 ? 'warning' : 'secondary' %>">
                            <%= number_with_precision(trade['model_score'], precision: 2) %>
                          </span>
                        </td>
                        <td class="text-muted small" title="<%= trade['thesis'] %>"><%= truncate(trade['thesis'], length: 40) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="alert alert-info text-center">
                <h5>No trades found</h5>
                <p class="mb-0">The latest scan didn't find any trades meeting the criteria.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Scan History -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Recent Scans</h5>
        </div>
        <div class="card-body">
          <% if @recent_scans.any? %>
            <div class="table-responsive">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Date & Time</th>
                    <th>Trades Found</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_scans.each do |scan| %>
                    <tr>
                      <td><%= scan.scan_timestamp.strftime("%m/%d/%Y %I:%M %p") %></td>
                      <td>
                        <span class="badge bg-<%= scan.trades_found > 0 ? 'success' : 'secondary' %>">
                          <%= scan.trades_found %> trades
                        </span>
                      </td>
                      <td>
                        <%= link_to "View Details", scanner_path(scan), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info text-center">
              <h6>No scans yet</h6>
              <p class="mb-0">Click "Run New Scan" to start analyzing market opportunities.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Scanner Information -->
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Scanner Criteria</h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li><strong>Minimum POP:</strong> 65%</li>
            <li><strong>Min Risk/Reward:</strong> 0.33 (1:3)</li>
            <li><strong>Max Loss Per Trade:</strong> 0.5% of NAV</li>
            <li><strong>Max Trades:</strong> 5 per scan</li>
            <li><strong>Max Per Sector:</strong> 2 trades</li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Strategies Analyzed</h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li>• Put Credit Spreads</li>
            <li>• Call Credit Spreads</li>
            <li>• Iron Condors</li>
            <li>More strategies coming soon...</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>