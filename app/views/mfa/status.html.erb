<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">üîê Multi-Factor Authentication Status</h3>
        </div>
        <div class="card-body">
          <% if flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= flash[:notice] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= flash[:alert] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <% if current_user.mfa_enabled? %>
            <div class="alert alert-success">
              <h5 class="alert-heading">‚úÖ MFA is Enabled</h5>
              <p class="mb-0">Your account is protected with Multi-Factor Authentication.</p>
            </div>

            <div class="row">
              <div class="col-md-6">
                <h5>Backup Codes</h5>
                <p class="text-muted">You have <strong><%= current_user.remaining_backup_codes %></strong> backup codes remaining.</p>
                
                <% if @backup_codes.present? %>
                  <div class="alert alert-warning">
                    <h6>üîë Your Backup Codes</h6>
                    <p><small>Save these codes securely. Each can only be used once:</small></p>
                    <div class="row">
                      <% @backup_codes.each do |code| %>
                        <div class="col-6">
                          <code><%= code %></code>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <%= form_with url: mfa_regenerate_backup_codes_path, local: true do |form| %>
                  <div class="mb-3">
                    <%= form.label :password, "Password (required for security)", class: "form-label" %>
                    <%= form.password_field :password, class: "form-control", required: true %>
                  </div>
                  <%= form.submit "Generate New Backup Codes", class: "btn btn-warning" %>
                <% end %>
              </div>

              <div class="col-md-6">
                <h5>Disable MFA</h5>
                <p class="text-muted">Only disable MFA if absolutely necessary. This will reduce your account security.</p>

                <%= form_with url: mfa_disable_path, method: :delete, local: true, 
                    data: { confirm: "Are you sure you want to disable MFA? This will reduce your account security." } do |form| %>
                  <div class="mb-3">
                    <%= form.label :password, "Password (required for security)", class: "form-label" %>
                    <%= form.password_field :password, class: "form-control", required: true %>
                  </div>
                  <%= form.submit "Disable MFA", class: "btn btn-danger" %>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="alert alert-warning">
              <h5 class="alert-heading">‚ö†Ô∏è MFA is Disabled</h5>
              <p class="mb-0">Your account is not protected with Multi-Factor Authentication.</p>
            </div>

            <div class="text-center">
              <%= link_to "Set Up MFA", mfa_setup_path, class: "btn btn-success btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= link_to "‚Üê Back to Dashboard", dashboard_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>