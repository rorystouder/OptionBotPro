<% content_for :title, "Admin Settings" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Settings</h1>
        <%= link_to admin_root_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-lg-6">
      <!-- Admin Profile Card -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-person-circle"></i> Admin Profile
          </h5>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-sm-4"><strong>Name:</strong></div>
            <div class="col-sm-8"><%= @user.full_name %></div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-4"><strong>Email:</strong></div>
            <div class="col-sm-8"><%= @user.email %></div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-4"><strong>Role:</strong></div>
            <div class="col-sm-8">
              <span class="badge bg-primary">Administrator</span>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4"><strong>Account Created:</strong></div>
            <div class="col-sm-8"><%= @user.created_at.strftime("%B %d, %Y") %></div>
          </div>
        </div>
      </div>

      <!-- Change Password Card -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-shield-lock"></i> Change Password
          </h5>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Security Notice:</strong> Choose a strong password with at least 8 characters, including uppercase, lowercase, numbers, and symbols.
          </div>

          <%= form_with url: admin_update_password_path, method: :patch, local: true, data: { turbo: false } do |form| %>
            <div class="mb-3">
              <%= form.label :current_password, "Current Password", class: "form-label" %>
              <%= form.password_field :current_password, class: "form-control", required: true, autocomplete: "current-password" %>
            </div>

            <div class="mb-3">
              <%= form.label :new_password, "New Password", class: "form-label" %>
              <%= form.password_field :new_password, class: "form-control", required: true, minlength: 8, autocomplete: "new-password" %>
              <div class="form-text">Minimum 8 characters required</div>
            </div>

            <div class="mb-4">
              <%= form.label :confirm_password, "Confirm New Password", class: "form-label" %>
              <%= form.password_field :confirm_password, class: "form-control", required: true, minlength: 8, autocomplete: "new-password" %>
            </div>

            <div class="d-grid">
              <%= form.submit "Update Password", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-lg-6">
      <!-- Security Tips Card -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-shield-check"></i> Security Tips
          </h5>
        </div>
        <div class="card-body">
          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="bi bi-check-circle text-success"></i>
              Use a unique password not used elsewhere
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success"></i>
              Include uppercase and lowercase letters
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success"></i>
              Add numbers and special characters
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success"></i>
              Make it at least 12 characters long
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success"></i>
              Avoid personal information
            </li>
            <li>
              <i class="bi bi-check-circle text-success"></i>
              Consider using a password manager
            </li>
          </ul>
        </div>
      </div>

      <!-- System Info Card -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-info-circle"></i> System Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row mb-2">
            <div class="col-6"><strong>Application:</strong></div>
            <div class="col-6">OptionBotPro</div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Environment:</strong></div>
            <div class="col-6">
              <span class="badge bg-<%= Rails.env.production? ? 'danger' : 'warning' %>">
                <%= Rails.env.humanize %>
              </span>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-6"><strong>Rails Version:</strong></div>
            <div class="col-6"><%= Rails.version %></div>
          </div>
          <div class="row">
            <div class="col-6"><strong>Database:</strong></div>
            <div class="col-6">SQLite</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>