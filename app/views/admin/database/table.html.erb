<% content_for :title, "Table: #{@table_name}" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="bi bi-table"></i> Table: <code><%= @table_name %></code>
        </h1>
        <div class="btn-group">
          <%= link_to admin_database_schema_path(@table_name), class: "btn btn-outline-info" do %>
            <i class="bi bi-diagram-3"></i> View Schema
          <% end %>
          <%= link_to admin_database_path, class: "btn btn-outline-secondary" do %>
            <i class="bi bi-arrow-left"></i> Back to Database
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Table Info -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-info-circle"></i> Table Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <strong>Total Records:</strong> <%= number_with_delimiter(@row_count) %>
            </div>
            <div class="col-md-4">
              <strong>Columns:</strong> <%= @table_info[:columns].count %>
            </div>
            <div class="col-md-4">
              <strong>Sample Data:</strong> Showing first 10 records
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Column Information -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-list-ul"></i> Column Structure
          </h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Column Name</th>
                  <th>Type</th>
                  <th>SQL Type</th>
                  <th>Nullable</th>
                  <th>Default</th>
                  <th>Key</th>
                </tr>
              </thead>
              <tbody>
                <% @table_info[:columns].each do |column| %>
                  <tr>
                    <td><code><%= column[:name] %></code></td>
                    <td><span class="badge bg-secondary"><%= column[:type] %></span></td>
                    <td><%= column[:sql_type] %></td>
                    <td>
                      <% if column[:null] %>
                        <span class="text-success">Yes</span>
                      <% else %>
                        <span class="text-danger">No</span>
                      <% end %>
                    </td>
                    <td>
                      <% if column[:default] %>
                        <code><%= column[:default] %></code>
                      <% else %>
                        <span class="text-muted">NULL</span>
                      <% end %>
                    </td>
                    <td>
                      <% if column[:primary] %>
                        <span class="badge bg-warning">PRIMARY</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sample Data -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-grid"></i> Sample Data (First 10 Records)
          </h5>
        </div>
        <div class="card-body">
          <% if @sample_data.any? %>
            <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <% @sample_data.columns.each do |column| %>
                      <th><%= column %></th>
                    <% end %>
                  </tr>
                </thead>
                <tbody>
                  <% @sample_data.rows.each do |row| %>
                    <tr>
                      <% row.each do |value| %>
                        <td>
                          <% if value.nil? %>
                            <span class="text-muted font-italic">NULL</span>
                          <% elsif value.to_s.length > 50 %>
                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="<%= html_escape(value) %>">
                              <%= truncate(value.to_s, length: 50) %>
                            </span>
                          <% else %>
                            <%= value %>
                          <% end %>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center text-muted py-4">
              <i class="bi bi-inbox" style="font-size: 3rem;"></i>
              <p class="mt-2">No data found in this table</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>