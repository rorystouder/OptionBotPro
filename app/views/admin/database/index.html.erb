<% content_for :title, "Database Management" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="bi bi-database"></i> Database Management
        </h1>
        <%= link_to admin_root_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Back to Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Database Information -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-info-circle"></i> Database Information
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <table class="table table-sm">
                <tr>
                  <th width="30%">Database Type:</th>
                  <td>SQLite</td>
                </tr>
                <tr>
                  <th>File Path:</th>
                  <td><code><%= @database_info[:path] %></code></td>
                </tr>
                <tr>
                  <th>File Size:</th>
                  <td><%= @database_info[:size_human] %></td>
                </tr>
                <tr>
                  <th>Last Modified:</th>
                  <td><%= @database_info[:modified] %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-6">
              <div class="text-center">
                <%= link_to admin_database_query_path, class: "btn btn-primary mb-2" do %>
                  <i class="bi bi-terminal"></i> SQL Query Tool
                <% end %>
                <p class="text-muted small">Execute custom SELECT queries</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tables Overview -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-table"></i> Database Tables (<%= @tables.count %>)
          </h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Table Name</th>
                  <th>Model</th>
                  <th>Row Count</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @tables.each do |table_name, info| %>
                  <tr>
                    <td>
                      <code><%= table_name %></code>
                    </td>
                    <td>
                      <% if info[:model] %>
                        <span class="badge bg-success"><%= info[:model_name] %></span>
                      <% else %>
                        <span class="badge bg-secondary">No Model</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge bg-info"><%= number_with_delimiter(info[:row_count]) %> rows</span>
                    </td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <%= link_to admin_database_table_path(table_name), class: "btn btn-outline-primary btn-sm" do %>
                          <i class="bi bi-eye"></i> View Data
                        <% end %>
                        <%= link_to admin_database_schema_path(table_name), class: "btn btn-outline-info btn-sm" do %>
                          <i class="bi bi-diagram-3"></i> Schema
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="row mt-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title text-primary"><%= @tables.count %></h5>
          <p class="card-text">Total Tables</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title text-success"><%= @tables.values.sum { |t| t[:row_count] } %></h5>
          <p class="card-text">Total Records</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title text-info"><%= @tables.count { |name, info| info[:model] } %></h5>
          <p class="card-text">Active Models</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title text-warning"><%= @database_info[:size_human] %></h5>
          <p class="card-text">Database Size</p>
        </div>
      </div>
    </div>
  </div>
</div>