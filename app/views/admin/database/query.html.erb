<% content_for :title, "SQL Query Tool" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="bi bi-terminal"></i> SQL Query Tool
        </h1>
        <%= link_to admin_database_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left"></i> Back to Database
        <% end %>
      </div>
    </div>
  </div>

  <!-- Security Notice -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="alert alert-warning">
        <i class="bi bi-shield-exclamation"></i>
        <strong>Security Notice:</strong> Only SELECT queries are allowed for safety. No INSERT, UPDATE, DELETE, or DDL operations are permitted.
      </div>
    </div>
  </div>

  <!-- Query Form -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-code"></i> Execute Query
          </h5>
        </div>
        <div class="card-body">
          <%= form_with url: admin_database_query_path, method: :post, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :sql, "SQL Query", class: "form-label" %>
              <%= form.text_area :sql, class: "form-control font-monospace", rows: 6, 
                                placeholder: "SELECT * FROM users LIMIT 10;", 
                                value: @sql %>
              <div class="form-text">Enter your SELECT query above. Example: <code>SELECT * FROM users WHERE admin = 1;</code></div>
            </div>
            <div class="d-grid">
              <%= form.submit "Execute Query", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Query Results -->
  <% if @error %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="alert alert-danger">
          <i class="bi bi-exclamation-triangle"></i>
          <strong>Query Error:</strong> <%= @error %>
        </div>
      </div>
    </div>
  <% elsif @data %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">
              <i class="bi bi-check-circle text-success"></i> Query Results
            </h5>
            <small class="text-muted">
              Executed in <%= @execution_time %>ms â€¢ <%= @data.count %> rows returned
            </small>
          </div>
          <div class="card-body">
            <% if @data.any? %>
              <div class="table-responsive">
                <table class="table table-striped table-sm">
                  <thead>
                    <tr>
                      <% @columns.each do |column| %>
                        <th><%= column %></th>
                      <% end %>
                    </tr>
                  </thead>
                  <tbody>
                    <% @data.each do |row| %>
                      <tr>
                        <% row.each do |value| %>
                          <td>
                            <% if value.nil? %>
                              <span class="text-muted font-italic">NULL</span>
                            <% elsif value.to_s.length > 100 %>
                              <span class="text-truncate d-inline-block" style="max-width: 300px;" title="<%= html_escape(value) %>">
                                <%= truncate(value.to_s, length: 100) %>
                              </span>
                            <% else %>
                              <%= value %>
                            <% end %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="text-center text-muted py-4">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <p class="mt-2">Query executed successfully but returned no results</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Quick Examples -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-lightbulb"></i> Quick Examples
          </h5>
        </div>
        <div class="card-body">
          <p class="mb-3">Click any example to copy it to the query box:</p>
          <div class="row">
            <div class="col-md-6">
              <h6>User Queries:</h6>
              <ul class="list-unstyled">
                <li class="mb-2">
                  <code class="query-example" data-query="SELECT * FROM users ORDER BY created_at DESC LIMIT 10;">
                    SELECT * FROM users ORDER BY created_at DESC LIMIT 10;
                  </code>
                  <br><small class="text-muted">Recent users</small>
                </li>
                <li class="mb-2">
                  <code class="query-example" data-query="SELECT email, admin, subscription_status FROM users WHERE admin = 1;">
                    SELECT email, admin, subscription_status FROM users WHERE admin = 1;
                  </code>
                  <br><small class="text-muted">Admin users</small>
                </li>
                <li class="mb-2">
                  <code class="query-example" data-query="SELECT subscription_status, COUNT(*) as count FROM users GROUP BY subscription_status;">
                    SELECT subscription_status, COUNT(*) as count FROM users GROUP BY subscription_status;
                  </code>
                  <br><small class="text-muted">Users by subscription status</small>
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>System Queries:</h6>
              <ul class="list-unstyled">
                <li class="mb-2">
                  <code class="query-example" data-query="SELECT name FROM sqlite_master WHERE type='table';">
                    SELECT name FROM sqlite_master WHERE type='table';
                  </code>
                  <br><small class="text-muted">List all tables</small>
                </li>
                <li class="mb-2">
                  <code class="query-example" data-query="SELECT sql FROM sqlite_master WHERE type='table' AND name='users';">
                    SELECT sql FROM sqlite_master WHERE type='table' AND name='users';
                  </code>
                  <br><small class="text-muted">Show table creation SQL</small>
                </li>
                <li class="mb-2">
                  <code class="query-example" data-query="SELECT COUNT(*) as total_orders FROM orders;">
                    SELECT COUNT(*) as total_orders FROM orders;
                  </code>
                  <br><small class="text-muted">Count total orders</small>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle example query clicks
  document.querySelectorAll('.query-example').forEach(function(element) {
    element.style.cursor = 'pointer';
    element.addEventListener('click', function() {
      document.getElementById('sql').value = this.dataset.query;
      document.getElementById('sql').focus();
    });
  });
});
</script>