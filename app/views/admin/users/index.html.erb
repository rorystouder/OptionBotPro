<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>User Management</h1>
  <div class="text-muted">
    <i class="bi bi-people"></i> <%= pluralize(@users.count, 'user') %> found
  </div>
</div>

<!-- Search and Filters -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: admin_users_path, method: :get, local: true, class: "row g-3" do |form| %>
      <div class="col-md-4">
        <%= form.text_field :search, value: params[:search], placeholder: "Search by email...", class: "form-control" %>
      </div>
      <div class="col-md-3">
        <%= form.select :status, options_for_select([
          ['All Statuses', ''],
          ['Trial', 'trial'],
          ['Active', 'active'],
          ['Past Due', 'past_due'],
          ['Canceled', 'canceled'],
          ['Suspended', 'suspended']
        ], params[:status]), {}, { class: "form-select" } %>
      </div>
      <div class="col-md-2">
        <%= form.submit "Filter", class: "btn btn-primary" %>
      </div>
      <div class="col-md-2">
        <%= link_to "Clear", admin_users_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Users Table -->
<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Subscription</th>
            <th>Status</th>
            <th>Trial Ends</th>
            <th>Joined</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <% if user.admin? %>
                    <i class="bi bi-star-fill text-warning me-2" title="Admin"></i>
                  <% end %>
                  <div>
                    <strong><%= user.full_name %></strong>
                    <% unless user.active? %>
                      <span class="badge bg-secondary ms-1">Inactive</span>
                    <% end %>
                  </div>
                </div>
              </td>
              <td><%= user.email %></td>
              <td>
                <% if user.subscription_tier %>
                  <span class="badge bg-<%= user.subscription_tier.basic_tier? ? 'secondary' : user.subscription_tier.pro_tier? ? 'success' : 'primary' %>">
                    <%= user.subscription_tier.name %>
                  </span>
                <% else %>
                  <span class="text-muted">None</span>
                <% end %>
              </td>
              <td>
                <span class="badge bg-<%= user.subscription_active? ? 'success' : 'warning' %>">
                  <%= user.subscription_status.humanize %>
                </span>
              </td>
              <td>
                <% if user.trial_active? %>
                  <%= user.trial_ends_at.strftime("%m/%d/%y") %>
                  <small class="text-muted">(<%= pluralize(user.days_until_trial_ends, 'day') %>)</small>
                <% elsif user.trial_expired? %>
                  <span class="text-danger">Expired</span>
                <% else %>
                  <span class="text-muted">N/A</span>
                <% end %>
              </td>
              <td><%= user.created_at.strftime("%m/%d/%y") %></td>
              <td>
                <div class="btn-group" role="group">
                  <%= link_to admin_user_path(user), class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-outline-secondary" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= button_to admin_user_path(user), method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      confirm: "Are you sure you want to delete #{user.full_name}?",
                      title: "Delete User" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% if @users.empty? %>
        <div class="text-center py-4">
          <i class="bi bi-people display-1 text-muted"></i>
          <h4 class="text-muted mt-3">No users found</h4>
          <p class="text-muted">Try adjusting your search criteria or filters.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
