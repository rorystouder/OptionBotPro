# TastyTrade Sandbox API Configuration 
# Use your sandbox login credentials (NOT client ID/secret)
TASTYTRADE_USERNAME=#use new username
TASTYTRADE_PASSWORD=#use new pw
TASTYTRADE_API_URL=https://api.cert.tastyworks.com
TASTYTRADE_WEBSOCKET_URL=wss://streamer.cert.tastyworks.com

# Database Configuration (use test database for sandbox)
DATABASE_URL=sqlite3:db/sandbox.sqlite3

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# Rails Configuration
SECRET_KEY_BASE=#use new key
RAILS_ENV=sandbox
RAILS_LOG_TO_STDOUT=true
RAILS_MAX_THREADS=5

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=10

# Sandbox Testing Flags
SANDBOX_MODE=true
AUTO_EXECUTE_TRADES=false
MOCK_MARKET_DATA=true
